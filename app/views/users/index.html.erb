<div>

	<% if flash[:errors] %>
	  	<% flash[:errors].each do |err| %>
	  		<p style="color: red;"><%= err %></p>
	  	<% end %>	
	<% end %>

	<fieldset style="display: inline-block; width: 40%; vertical-align: top;">
		<legend>Register</legend>
			<form action="/users/register" method="post">
			   <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
			    <p>First Name: <input type="text" name="first_name" required></p>
			    <p>Last Name: <input type="text" name="last_name" required></p>			    
			   	<p>Email: <input type="text" name="email" required></p>
			   	<p><i>*password should be at least 8 characters</i></p>
			   	<p>Password: <input type="password" name="password" required></p>
			   	<p>Password Confirm: <input type="password" name="password_confirmation" required></p>
			   <input type="submit" value="Register">
			</form>		
	</fieldset>
	<fieldset style="display: inline-block; width: 40%;">
		<legend>Login</legend>
			<form action="/users/login" method="post">
	   			<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	   			<p>Email: <input type="text" name="Email" placeholder="Email" required></p>
	   			<p>Password: <input type="password" name="Password" placeholder="Password" required></p>
	   			<input type="submit" value="Log In">
			</form>
	</fieldset>
</div>

